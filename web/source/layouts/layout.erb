<!doctype html>
<html>
  
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, viewport-fit=cover, user-scalable=no">
    <meta name="format-detection" content="telephone=no,date=no,address=no,email=no">
    <meta name="color-scheme" content="only light">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="X-Clacks-Overhead" content="GNU Terry Pratchett">
    <title>Nii<%= " • #{current_page.data.title.tr(' – ', ' • ')}" if current_page.data.title %></title>
    <%= stylesheet_link_tag "site" %>
    <!-- <%= javascript_include_tag "site" %> -->
  </head>
  
  <body class="<%= current_page.data.css_class %>">
    <header><%= partial 'header' %></header>
    <main role="main">
      <% if current_page.data.title %><h1><%= current_page.data.title %></h1><% end %>
      <%= yield %>
    </main>
    <footer><%= partial 'footer' %></footer>
  </body>

</html>
